<UserControl x:Class="AnschreibenCreator.Lib.View.BriefKopfView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnschreibenCreator.Lib.View"
             mc:Ignorable="d" 
             d:Background="{StaticResource DarkThemeBackgroundBrush-a10}"
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock  TextTrimming="CharacterEllipsis"  MaxWidth="300" Text="{Binding FilePath,FallbackValue=D:\Software_Projekte\AnschreibenCreator.WPF\Manager\NavigationManager.cs}" Foreground="White" Background="{StaticResource DarkThemeBackgroundBrush-a30}" VerticalAlignment="Center" FontSize="20"  Height="50" Margin="10"/>
                <Button Style="{StaticResource CkButton}" FontSize="20" Grid.Row="0" Grid.Column="1" Foreground="{StaticResource DarkThemeBackgroundBrush-a10}" Background="{StaticResource DarKThemeGUIElementBrush-a10}" Content="Lade Anschriften" Height="50" Width="200" Margin="10" Command="{Binding LoadFileCommand}" />

            </Grid>


            <ListView SelectedItem="{Binding SelectedModel}" d:MinHeight="300" BorderThickness="0" Background="{StaticResource DarkThemeBackgroundBrush-a20}" ItemsSource="{Binding AnschriftenListe}" Grid.Column="0" Grid.Row="1" >

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label FontSize="20" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Content="{Binding FirmenName, FallbackValue=DemoFirma}"/>
                            
                            
                        </StackPanel>
                    </DataTemplate>

                </ListBox.ItemTemplate>



            </ListView>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Firma :" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Background="Transparent" FontSize="15"/>
                <Label Grid.Row="1" Content="Zu Händen :" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Background="Transparent" FontSize="15"/>
                <Label Grid.Row="2" Content="Straße :" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Background="Transparent" FontSize="15"/>
                <Label Grid.Row="3" Content="Plz + Stadt :" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Background="Transparent" FontSize="15"/>
                <Label Grid.Row="4" Content="Anrede Geschlecht :" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Background="Transparent" FontSize="15"/>
                <Label Grid.Row="5" Content="Anrede:" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Background="Transparent" FontSize="15"/>



                <Label Margin="10,0,0,0" Grid.Row="0" Grid.Column="1" Content="{Binding SelectedModel.FirmenName}" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Background="Transparent" FontSize="15"/>
                <Label Margin="10,0,0,0" Grid.Row="1" Grid.Column="1" Content="{Binding SelectedModel.ZuHänden}" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Background="Transparent" FontSize="15"/>
                <Label Margin="10,0,0,0" Grid.Row="2" Grid.Column="1" Content="{Binding SelectedModel.Straße}" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Background="Transparent" FontSize="15"/>
                <Label Margin="10,0,0,0" Grid.Row="3" Grid.Column="1" Content="{Binding SelectedModel.PlzUStadt}" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Background="Transparent" FontSize="15"/>
                <Label Margin="10,0,0,0" Grid.Row="4" Grid.Column="1" Content="{Binding SelectedModel.AnredeGeschlecht}" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Background="Transparent" FontSize="15"/>
                <Label Margin="10,0,0,0" Grid.Row="5" Grid.Column="1" Content="{Binding SelectedModel.AnredeText}" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Background="Transparent" FontSize="15"/>

            </Grid>

        </Grid>


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Style="{StaticResource CkButton}" Command="{Binding AnredeCommand}" CommandParameter="Frau"  Foreground="{StaticResource DarkThemeBackgroundBrush-a10}" Background="{StaticResource DarKThemeGUIElementBrush-a10}" Content="Frau" Height="50" Width="200" Margin="10" FontSize="20" />
            <Button Grid.Column="1" Style="{StaticResource CkButton}" Command="{Binding AnredeCommand}" CommandParameter="Herr"  Foreground="{StaticResource DarkThemeBackgroundBrush-a10}" Background="{StaticResource DarKThemeGUIElementBrush-a10}" Content="Herr" Height="50" Width="200" Margin="10" FontSize="20" />
            <Button Grid.Column="2" Style="{StaticResource CkButton}" Command="{Binding AnredeCommand}" CommandParameter="Damen und Herren"  Foreground="{StaticResource DarkThemeBackgroundBrush-a10}" Background="{StaticResource DarKThemeGUIElementBrush-a10}" Content="Damen u Herren" Height="50" Width="200" Margin="10" FontSize="20" />
           


        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Text="{Binding EigeneAnschriftRaw}" Style="{StaticResource TextBoxPlaxeholder}" TextWrapping="Wrap" AcceptsReturn="True" FontSize="20" Background="{StaticResource DarkThemeBackgroundBrush-a20}" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" Tag="Eigene Anschrift" Height="160"/>

            <Grid Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Content="Name :" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" FontSize="15"/>
                <Label Grid.Column="0" Grid.Row="1" Content="Straße :" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" FontSize="15"/>
                <Label Grid.Column="0" Grid.Row="2" Content="Plz + Stadt :" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" FontSize="15"/>
                <Label Grid.Column="0" Grid.Row="3" Content="Mobile :" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" FontSize="15"/>
                <Label Grid.Column="0" Grid.Row="4" Content="Mail :" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" FontSize="15"/>

                <Label Grid.Column="1" Grid.Row="0" Content="{Binding EigeneAnschrift.Name}" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" FontSize="15"/>
                <Label Grid.Column="1" Grid.Row="1" Content="{Binding EigeneAnschrift.Straße}" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" FontSize="15"/>
                <Label Grid.Column="1" Grid.Row="2" Content="{Binding EigeneAnschrift.PlzUStadt}" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" FontSize="15"/>
                <Label Grid.Column="1" Grid.Row="3" Content="{Binding EigeneAnschrift.Mobile}" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" FontSize="15"/>
                <Label Grid.Column="1" Grid.Row="4" Content="{Binding EigeneAnschrift.Email}" Foreground="{StaticResource DarKThemeGUIElementBrush-a10}" FontSize="15"/>


            </Grid>
            
        </Grid>
        

    </Grid>
</UserControl>
