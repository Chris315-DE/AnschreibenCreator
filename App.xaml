<Application x:Class="AnschreibenCreator.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AnschreibenCreator.WPF.ViewModel"
             xmlns:view="clr-namespace:AnschreibenCreator.WPF.View"
             xmlns:local="clr-namespace:AnschreibenCreator.WPF">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CkWPF.Base;component/Styles/Common.xaml"/>
                <ResourceDictionary Source="/CkWPF.Base;component/Styles/CKNavButton.xaml"/>
                <ResourceDictionary Source="/CkWPF.Base;component/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/CkWPF.Base;component/Styles/CKTextBoxStyle.xaml"/>
                <ResourceDictionary Source="/CkWPF.Base;component/Styles/CKTextBlockStyle.xaml"/>

            </ResourceDictionary.MergedDictionaries>


            <DataTemplate DataType="{x:Type vm:BriefKopfViewModel}">
                <view:BriefKopfView/>
            </DataTemplate>


        </ResourceDictionary>
    </Application.Resources>
</Application>
